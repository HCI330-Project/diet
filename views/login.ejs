<%- include("partials/header") %>

<section id="form">
  <div class="d-flex justify-content-center pb-3  text-center  align-items-center futura-h">
    <form action="/login" method="post">
      <div>
        <h5 class="text-center pt-5">Username:</h5>
      </div>

      <div id="form-field" class="pb-4">
        <!-- <label for="username">Username:</label><br> -->
        <input class="futura-hi" id="rounded-corner" type="text" name="username" placeholder="username">
      </div>

      <div>
        <h5 class="text-center">Password:</h5>
      </div>
      <div id="form-field" class="pb-4">
        <!-- <label for="password">Password:</label><br> -->
        <input class="futura-hi" id="rounded-corner" type="password" name="password" placeholder="password">
      </div>

      <div class="d-flex justify-content-center pb-4">
        <button class="register-go" type="submit" name="button">Login</button>
      </div>

    </form>
  </div>
</section>

<div class="footer justify-content-center align-items-center text-center">
  <% if (!currentUser) {%>
  <p class="mr-3"><a href="/register">Sign up!</a></p>
  <p><a href="/login">Login</a></p>

  <%} else {%>
  <p class="mr-3"><a href="/profile">Profile</a></p>
  <p><a href="/logout">Logout</a></p>
  <%}%>

</div>
<%- include("partials/footer") %>