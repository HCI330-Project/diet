<%- include("partials/header") %>
<div class="d-flex justify-content-center justify-content-lg-start pt-4 pl-lg-4 text-center text-lg-left align-items-center" >
  <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center" >
  <h2> Welcome, <%= currentUser.username%>. </h2>
  </div>
</div>

<br>
<% if (currentUser.gainMuscleIsTrue == true) { %>
  <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 pt-0 text-center text-lg-left align-items-center" >
    <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center">
      <h5 class="text-center">Eat <%= currentUser.weight * currentUser.multiple + 500%> calories to burn fat today. </h5>
    </div>
  </div>
<% } else { %>
  <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 pt-0 text-center text-lg-left align-items-center" >
    <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center" >
      <h5>Eat <%= currentUser.weight * currentUser.multiple - 500%> calories to burn fat today. </h5>
    </div>
  </div>
<br>
<%}%>




<div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center" >
  <form action="/profile/?_method=PUT" method="POST">

      <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center">
          <h5 class="text-center">Your current weight is:</h5>
      </div>

      <div class="d-flex justify-content-center pb-3 justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center" id="form-field">
        <input id="rounded-corner" type="number" name="userInfo[weight]" placeholder="weight" value ="<%= currentUser.weight%>">
      </div>

      <div class="d-flex justify-content-center justify-content-lg-start pb-5 pl-lg-4">
        <button class="btn btn-primary" type="submit" name="button">Update</button>
      </div>


<!-- NOT UPDATING DB CORRECTLY -->

      <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center">
          <h5 class="text-center ">I would like to:</h5>
      </div>

      <div class="pt-3 justify-content-lg-start">
        <div class="toggle pb-3 pl-lg-4 justify-content-lg-start">
          <input type="radio" id="gainMuscle" name="goal" value="1" checked onclick= "document.getElementById('loseFat').checked = false">
          <label for="gainMuscle">Gain Muscle</label>

          <input type="radio" id="loseFat" name="goal" value="0" onclick= "document.getElementById('gainMuscle').checked = false">
          <label for="loseFat">Burn Fat</label>
          <br>
        </div>
      </div>

      <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center">
          <h5 class="text-center"> I am a:</h5>
      </div>

      <div class="toggle pt-3 pb-3 pl-lg-4 justify-content-lg-start">
        <input type="radio" name="sizeBy" value="11" id="sizeWeight" checked="checked" />
        <label for="sizeWeight">Sitter</label>
        <input type="radio" name="sizeBy" value="13" id="sizeDimensions" />
        <label for="sizeDimensions">Walker</label>
        <input type="radio" name="sizeBy" value="15" id="sizeDimension" />
        <label for="sizeDimension">Runner</label>
      </div>

    <div class="d-flex justify-content-center justify-content-lg-start pl-lg-4">
      <button class="btn btn-primary" type="submit" name="button">Save</button>
    </div>

  </form>
  </div>
