<%- include("partials/header") %>

<div
  class="d-flex justify-content-center justify-content-lg-start pt-4 pl-lg-4 text-center text-lg-left align-items-center">
  <div
    class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center">
    <h2 class="futura-h"> Welcome, <%= currentUser.username%>. </h2>
  </div>
</div>

<br>
<% if (currentUser.gainMuscleIsTrue == true) { %>
<div
  class="d-flex justify-content-center justify-content-lg-start pl-lg-4 pt-0 text-center text-lg-left align-items-center">
  <div
    class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center">
    <h5 class="text-center futura-hi">Eat <%= currentUser.weight * currentUser.multiple + 500%> calories to burn fat
      today! </h5>
  </div>
</div>
<% } else { %>
<div
  class="d-flex justify-content-center justify-content-lg-start pl-lg-4 pt-0 text-center text-lg-left align-items-center">
  <div
    class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center">
    <h5 class="text-center futura-hi">Eat <%= currentUser.weight * currentUser.multiple - 500%> calories to burn fat
      today! </h5>
  </div>
</div>
<br>
<%}%>


<!-- GET TODAY's MENU -->

<form action="/profile" method="POST" class="pb-5">
  <div style="display:none">
    <input name="weight" value="<%= currentUser.weight%>">
<input name="sizeBy" value="<%=currentUser.multiple%>" />
<input name="goal" value="<%=currentUser.gainMuscleIsTrue%>">
</div>
<div class="d-flex justify-content-center justify-content-lg-start pb-5 pl-lg-4">
  <button class="register-go" type="submit" name="button">Get Today's Menu</button>
</div>
</form>


<div
  class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center pt-3">
  <form action="/profile/?_method=PUT" method="POST">

    <div
      class="d-flex justify-content-center justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center">
      <h5 class="text-center futura-h">Your current weight is:</h5>
    </div>

    <div
      class="d-flex justify-content-center pb-3 justify-content-lg-start pl-lg-4 text-center text-lg-left align-items-center"
      id="form-field">
      <input class="futura-hi" id="rounded-corner" type="number" name="userInfo[weight]" placeholder="weight"
        value="<%= currentUser.weight%>">
    </div>

    <div class="d-flex justify-content-center justify-content-lg-start pb-5 pl-lg-4">
      <button class="register-go" type="submit" name="button">Update</button>
    </div>


    <div class="footer justify-content-center align-items-center text-center">
      <% if (!currentUser) {%>
      <p class="mr-3"><a href="/register">Sign up!</a></p>
      <p><a href="/login">Login</a></p>

      <%} else {%>
      <p class="mr-3"><a href="/profile">Profile</a></p>
      <p><a href="/logout">Logout</a></p>
      <%}%>

</div>
  </form>
</div>